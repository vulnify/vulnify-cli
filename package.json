{
  "name": "vulnify-cli",
  "version": "1.0.0",
  "description": "CLI tool for vulnerability analysis using Vulnify SCA API",
  "main": "dist/index.js",
  "bin": {
    "vulnify": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "start": "node dist/cli.js",
    "watch": "nodemon --exec ts-node src/cli.ts",
    "clean": "rm -rf dist",
    "prepublish": "npm run clean && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "security",
    "vulnerability",
    "sca",
    "cli",
    "dependencies"
  ],
  "author": "Vulnify Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "chalk": "^5.6.0",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.0",
    "fs-extra": "^11.3.1",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.3.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
